{% extends 'base.html.twig' %}

{% block title %}Ajouter un commentaire - Blog Mini{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8 mx-auto">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_post_index') }}">Articles</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_post_show', {'id': post.id}) }}">{{ post.title }}</a></li>
                <li class="breadcrumb-item active">Commenter</li>
            </ol>
        </nav>

        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">Article : {{ post.title }}</h5>
            </div>
            <div class="card-body">
                <p class="card-text">{{ post.content|slice(0, 200) }}...</p>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-chat-dots"></i> Ajouter un commentaire</h5>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                    <div class="mb-3">
                        {{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                        {{ form_errors(form.content) }}
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Publier le commentaire
                        </button>
                        <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
