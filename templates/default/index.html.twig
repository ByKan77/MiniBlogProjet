{% extends 'base.html.twig' %}

{% block title %}Accueil - Blog Mini{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <h1 class="mb-4">Bienvenue sur Blog Mini</h1>
        <p class="lead">Découvrez nos derniers articles</p>
        
        {% if posts is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Aucun article disponible pour le moment.
            </div>
        {% else %}
            <div class="row">
                {% for post in posts %}
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        {% if post.picture %}
                        <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}" style="height: 200px; object-fit: cover;">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ post.title }}</h5>
                            <p class="card-text">{{ post.content|slice(0, 150) }}...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> {{ post.publishedAt|date('d/m/Y') }}
                                    {% if post.category %}
                                    <span class="badge bg-secondary ms-2">{{ post.category.name }}</span>
                                    {% endif %}
                                </small>
                                <a href="{{ path('app_post_show', {id: post.id}) }}" class="btn btn-primary btn-sm">Lire la suite</a>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-info-circle"></i> À propos</h5>
            </div>
            <div class="card-body">
                <p>Bienvenue sur Blog Mini, votre plateforme de blogging développée avec Symfony.</p>
                <a href="{{ path('app_post_index') }}" class="btn btn-outline-primary w-100">Voir tous les articles</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
