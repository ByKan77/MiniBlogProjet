<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Blog Mini - Symfony{% endblock %}</title>
    <link rel="icon" href="{{ asset('favicon.ico') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    {% block stylesheets %}
        {# Le CSS néo-brutaliste est chargé via app.js et importmap() et surcharge Bootstrap #}
    {% endblock %}
    <style>
        /* S'assurer que la navbar est cliquable */
        .navbar {
            position: relative;
            z-index: 1030;
        }
        .dropdown-menu {
            z-index: 1050;
        }
        /* S'assurer qu'aucun élément ne bloque les clics */
        body {
            position: relative;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="{{ path('home') }}">
                <i class="bi bi-journal-text"></i> BLOG MINI
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Basculer la navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_post_index') }}">Articles</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <span class="nav-separator">|</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-admin" href="{{ path('app_admin_index') }}"><i class="bi bi-speedometer2"></i> Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-admin" href="{{ path('app_admin_posts') }}"><i class="bi bi-journal-text"></i> Articles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-admin" href="{{ path('app_admin_users') }}"><i class="bi bi-people"></i> Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-admin" href="{{ path('app_admin_comments') }}"><i class="bi bi-chat-dots"></i> Commentaires</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-admin" href="{{ path('app_post_new') }}"><i class="bi bi-plus-circle"></i> Nouveau</a>
                    </li>
                    {% endif %}
                </ul>
                <ul class="navbar-nav">
                    {% if app.user %}
                    <li class="nav-item">
                        <span class="nav-link nav-link-disabled"><i class="bi bi-person-circle"></i> {{ app.user.firstname }} {{ app.user.lastname }}</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right"></i> Déconnexion</a>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
    </main>

    <footer class="py-4 mt-5">
        <div class="container text-center">
            <p>&copy; {{ "now"|date("Y") }} BLOG MINI - DÉVELOPPÉ AVEC SYMFONY</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}
        {{ importmap() }}
    {% endblock %}
</body>
</html>
