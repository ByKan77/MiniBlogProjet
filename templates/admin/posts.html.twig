{% extends 'base.html.twig' %}

{% block title %}Gestion des articles - Blog Mini{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-journal-text"></i> Gestion des articles</h1>
    <div>
        <a href="{{ path('app_post_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvel article
        </a>
        <a href="{{ path('app_admin_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        {% if posts is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Aucun article disponible.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Titre</th>
                            <th>Auteur</th>
                            <th>Cat√©gorie</th>
                            <th>Date de publication</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for post in posts %}
                        <tr>
                            <td>{{ post.id }}</td>
                            <td>{{ post.title }}</td>
                            <td>{{ post.author.firstname }} {{ post.author.lastname }}</td>
                            <td>
                                {% if post.category %}
                                    <span class="badge bg-secondary">{{ post.category.name }}</span>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>{{ post.publishedAt|date('d/m/Y') }}</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-outline-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
