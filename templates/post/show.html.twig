{% extends 'base.html.twig' %}

{% block title %}{{ post.title }} - Blog Mini{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_post_index') }}">Articles</a></li>
                <li class="breadcrumb-item active">{{ post.title }}</li>
            </ol>
        </nav>

        <article class="card mb-4">
            {% if post.picture %}
            <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}" style="max-height: 400px; object-fit: cover;">
            {% endif %}
            <div class="card-body">
                <h1 class="card-title">{{ post.title }}</h1>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <small class="text-muted">
                            <i class="bi bi-calendar"></i> Publié le {{ post.publishedAt|date('d/m/Y à H:i') }}
                            {% if post.author %}
                            par <strong>{{ post.author.firstname }} {{ post.author.lastname }}</strong>
                            {% endif %}
                        </small>
                    </div>
                    {% if post.category %}
                    <span class="badge bg-primary">{{ post.category.name }}</span>
                    {% endif %}
                </div>
                <div class="card-text">
                    {{ post.content|nl2br }}
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                <div class="mt-3">
                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                    {{ include('post/_delete_form.html.twig') }}
                </div>
                {% endif %}
            </div>
        </article>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-chat-dots"></i> Commentaires ({{ comments|length }})</h5>
            </div>
            <div class="card-body">
                {% if comments is empty %}
                    <p class="text-muted">Aucun commentaire pour le moment.</p>
                {% else %}
                    {% for comment in comments %}
                    <div class="border-bottom pb-3 mb-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <strong>{{ comment.author.firstname }} {{ comment.author.lastname }}</strong>
                                <small class="text-muted ms-2">
                                    <i class="bi bi-clock"></i> {{ comment.createdAt|date('d/m/Y à H:i') }}
                                </small>
                            </div>
                        </div>
                        <p class="mb-0">{{ comment.content|nl2br }}</p>
                    </div>
                    {% endfor %}
                {% endif %}

                {% if app.user %}
                <div class="mt-4">
                    <h6>Ajouter un commentaire</h6>
                    <a href="{{ path('app_comment_new', {'post': post.id}) }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Commenter
                    </a>
                </div>
                {% else %}
                <div class="alert alert-info mt-3">
                    <i class="bi bi-info-circle"></i> <a href="{{ path('app_login') }}">Connectez-vous</a> pour ajouter un commentaire.
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card mb-3">
            <div class="card-header">
                <h6 class="mb-0">Informations</h6>
            </div>
            <div class="card-body">
                <p><strong>Auteur:</strong><br>{{ post.author.firstname }} {{ post.author.lastname }}</p>
                <p><strong>Date:</strong><br>{{ post.publishedAt|date('d/m/Y') }}</p>
                {% if post.category %}
                <p><strong>Catégorie:</strong><br>{{ post.category.name }}</p>
                {% endif %}
            </div>
        </div>
        <a href="{{ path('app_post_index') }}" class="btn btn-outline-secondary w-100">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>
{% endblock %}
