{% extends 'base.html.twig' %}

{% block title %}Articles - Blog Mini{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-journal-text"></i> Liste des articles</h1>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_post_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nouvel article
    </a>
    {% endif %}
</div>

{% if posts is empty %}
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Aucun article disponible pour le moment.
    </div>
{% else %}
    <div class="row">
        {% for post in posts %}
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                {% if post.picture %}
                <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}" style="height: 200px; object-fit: cover;">
                {% else %}
                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                    <i class="bi bi-image text-white" style="font-size: 3rem;"></i>
                </div>
                {% endif %}
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ post.title }}</h5>
                    <p class="card-text flex-grow-1">{{ post.content|slice(0, 120) }}...</p>
                    <div class="mt-auto">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted">
                                <i class="bi bi-calendar"></i> {{ post.publishedAt|date('d/m/Y') }}
                            </small>
                            {% if post.category %}
                            <span class="badge bg-secondary">{{ post.category.name }}</span>
                            {% endif %}
                        </div>
                        <div class="d-flex gap-2">
                            <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-primary btn-sm flex-fill">
                                <i class="bi bi-eye"></i> Lire
                            </a>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-pencil"></i>
                            </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
