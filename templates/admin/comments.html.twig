{% extends 'base.html.twig' %}

{% block title %}Gestion des commentaires - Blog Mini{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-chat-dots"></i> Gestion des commentaires</h1>
    <a href="{{ path('app_admin_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Retour
    </a>
</div>

<div class="card">
    <div class="card-body">
        {% if comments is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Aucun commentaire disponible.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Article</th>
                            <th>Auteur</th>
                            <th>Contenu</th>
                            <th>Date</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for comment in comments %}
                        <tr>
                            <td>{{ comment.id }}</td>
                            <td>
                                <a href="{{ path('app_post_show', {'id': comment.post.id}) }}">
                                    {{ comment.post.title|slice(0, 30) }}...
                                </a>
                            </td>
                            <td>{{ comment.author.firstname }} {{ comment.author.lastname }}</td>
                            <td>{{ comment.content|slice(0, 50) }}...</td>
                            <td>{{ comment.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                {% if comment.status == 'approved' %}
                                    <span class="badge bg-success">Approuvé</span>
                                {% elseif comment.status == 'rejected' %}
                                    <span class="badge bg-danger">Rejeté</span>
                                {% else %}
                                    <span class="badge bg-warning">En attente</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if comment.status != 'approved' %}
                                <form method="post" action="{{ path('app_admin_comment_approve', {'id': comment.id}) }}" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ comment.id) }}">
                                    <button type="submit" class="btn btn-sm btn-success">
                                        <i class="bi bi-check-circle"></i> Approuver
                                    </button>
                                </form>
                                {% endif %}
                                {% if comment.status != 'rejected' %}
                                <form method="post" action="{{ path('app_admin_comment_reject', {'id': comment.id}) }}" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ comment.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-x-circle"></i> Rejeter
                                    </button>
                                </form>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
