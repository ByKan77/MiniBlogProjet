{% extends 'base.html.twig' %}

{% block title %}Inscription - Blog Mini{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header text-center">
                <h3><i class="bi bi-person-plus"></i> Créer un compte</h3>
            </div>
            <div class="card-body">
                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(registrationForm.firstName, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.firstName) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(registrationForm.lastName, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.lastName) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                        <small class="form-text text-muted">Minimum 6 caractères</small>
                    </div>

                    <div class="mb-3 form-check">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-person-plus"></i> S'inscrire
                        </button>
                    </div>
                {{ form_end(registrationForm) }}

                <div class="text-center mt-3">
                    <p>Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
