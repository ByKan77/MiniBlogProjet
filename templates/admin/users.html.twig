{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs - Blog Mini{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-people"></i> Gestion des utilisateurs</h1>
    <a href="{{ path('app_admin_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Retour
    </a>
</div>

<div class="card">
    <div class="card-body">
        {% if users is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Aucun utilisateur enregistré.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Rôles</th>
                            <th>Date d'inscription</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.firstname }} {{ user.lastname }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% for role in user.roles %}
                                    <span class="badge bg-{{ role == 'ROLE_ADMIN' ? 'danger' : 'primary' }}">
                                        {{ role }}
                                    </span>
                                {% endfor %}
                            </td>
                            <td>{{ user.createdAt|date('d/m/Y') }}</td>
                            <td>
                                {% if 'ROLE_USER' in user.roles %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-secondary">Désactivé</span>
                                {% endif %}
                            </td>
                            <td>
                                <form method="post" action="{{ path('app_admin_user_toggle', {'id': user.id}) }}" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                                    <button type="submit" class="btn btn-sm btn-{{ 'ROLE_USER' in user.roles ? 'warning' : 'success' }}">
                                        <i class="bi bi-{{ 'ROLE_USER' in user.roles ? 'x-circle' : 'check-circle' }}"></i>
                                        {{ 'ROLE_USER' in user.roles ? 'Désactiver' : 'Activer' }}
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
